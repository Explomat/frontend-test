.calendar-cell{
	cursor: pointer;
	float: left;
    height: 100px;
    line-height: 1rem;
    width: 14.28%;
    text-align: left;
    padding: 8px;
    border-right: 1px solid #ddd;
    font-size: 12px;

    &:last-child {
		border-right: none;
	}
	
	&--selected {
		border: 2px solid blue;
	}
	&--cur-date {
		background-color: #f3f3f3;
		font-weight: 700;
    	font-size: 13px;
	}
	
	&__content {
		word-break: break-word;
	    overflow-y: hidden;
	    height: 100%;
	    font-size: 11px;
	    
		.calendar-cell__title {
			font-size: 12px;
			
			&--not-cur-date {
				color: #ccc;
			}
		}
	}
}