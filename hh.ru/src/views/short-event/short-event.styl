@import '../../../style/vars.styl';

.short-event {
	position: absolute;
	top: 100%;
	margin-top: 24px;
	height: 100px;
	
	&__pointer {
		width: 20px;
	    height: 20px;
	    display: inline-block;
	    background-color: #fff;
	    position: absolute;
	    transform: translateY(-50%) rotate(45deg);
	    left: 16px;
	    z-index: 2;
		box-shadow: -2px 0px 3px -2px rgba(0,0,0,0.14), -2px -2px 3px -2px rgba(0,0,0,0.14);
	}
	&__body {
		padding: 16px;
		position: absolute;
	    height: 100px;
	    width: 100px;
	    z-index: 1;
	    background-color: #fff;
	    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12);
	}
}