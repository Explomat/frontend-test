.short-event {
	position: absolute;
	top: 100%;
	margin-top: 12px;
	
	&:before, &:after {
		position: absolute;
	    display: inline-block;
	    content: "";
	    z-index: 1;
	}
	&:before {
		top: -16px;
	    right: auto;
	    left: 9px;
		border: 8px solid transparent;
    	border-bottom-color: rgba(27,31,35,0.15);
	}
	
	&:after {
		top: -14px;
	    right: auto;
	    left: 10px;
		border: 7px solid transparent;
    	border-bottom-color: #fff;
	}
	
	&__content {
		position: absolute;
	    z-index: 1;
	    background-color: #fff;
	    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12);
	    min-width: 300px;
	    border-radius: 4px;

		.short-event__header {
			padding: 8px;
		}
		.short-event__body {
			padding: 15px;
		    
		    .short-event__create-button {
		    	margin-top: 8px;
		    }
		}
		.short-event__footer {
			padding: 0px 15px 15px 15px;
		}
	}
}