.input-search {
	display: inline-block;
	
	&__items {
		position: absolute;
		top: 100%;
		margin-top: 12px;
		
		&:before, &:after {
			position: absolute;
		    display: inline-block;
		    content: "";
		    z-index: 1;
		}
		&:before {
			top: -16px;
		    right: auto;
		    left: 9px;
			border: 8px solid transparent;
	    	border-bottom-color: rgba(27,31,35,0.15);
		}
		
		&:after {
			top: -14px;
		    right: auto;
		    left: 10px;
			border: 7px solid transparent;
	    	border-bottom-color: #fff;
		}
		
		.input-search__content {
			position: absolute;
		    z-index: 1;
		    background-color: #fff;
		    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12);
		    width: 210px;
		    max-height: 400px;
		    border-radius: 4px;
		    padding: 8px;
		    
		    .input-search__item{
		    	border-bottom: 1px solid #ccc;

		    	&:last-child {
		    		border-bottom: none;
		    	}

		    	&-title {
		    		font-weight: 700;
		    		font-size: 14px;
		    	}	
		    	&-description {
		    		font-size: 11px;
		    		color: #888;
		    	}
		    }
		}
	}
}