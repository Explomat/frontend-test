.search-route {
	position: relative;
	width: 384px;
	
	&:before {
		content: '\1F50D';
	    display: inline-block;
	    position: absolute;
	    left: 6px;
	    top: 50%;
	    color: #7d7d7d;
	}
	
	& .input-box__label {
		left: 30px;
	}
	& .input-box__input {
		padding: 0 0 0 30px;
	}

	&__items {
		position: absolute;
		top: 100%;
		margin-top: 12px;
		
		&:before, &:after {
			position: absolute;
		    display: inline-block;
		    content: "";
		    z-index: 1;
		}
		&:before {
			top: -16px;
		    right: auto;
		    left: 9px;
			border: 8px solid transparent;
	    	border-bottom-color: rgba(27,31,35,0.15);
		}
		
		&:after {
			top: -14px;
		    right: auto;
		    left: 10px;
			border: 7px solid transparent;
	    	border-bottom-color: #fff;
		}
		
		.search-route__content {
			position: absolute;
		    z-index: 1;
		    background-color: #fff;
		    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12);
		    width: 384px;
		    max-height: 430px;
		    border-radius: 4px;
		    overflow-y: auto;
		    
		    .point{
		    	border-bottom: 1px solid #ddd;
		    	padding: 8px;
		    	cursor: pointer;
		    	outline: 0;
		    	white-space: nowrap;
		    	margin: 4px;
		    	
		    	&:focus {
		    		background-color: #64B5F6;
		    	}
		    	
		    	&:focus .point__name:after, &:focus .point__description:after{	
		    		background: linear-gradient(to right, rgba(255,255,255, 0), #64B5F6 100%);
		    	}

		    	&:last-child {
		    		border-bottom: none;
		    	}

		    	&__name {
		    		font-weight: 700;
		    		font-size: 14px;
    				overflow: hidden;
    				position: relative;
		    	}	
		    	&__description {
		    		font-size: 11px;
		    		color: #6b6b6b;
		    		overflow: hidden;
    				position: relative;
		    	}
		    	
		    	&__name, &__description {
		    		&:after {
    					content: '';
					    position: absolute;
					    right: 0;
					    top: 0;
					    width: 40px;
					    height: 100%;
					    background: linear-gradient(to right, rgba(255,255,255, 0.2), #fff 100%);
    				}
		    	}
		    }
		}
	}
}